<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    tools:context=".PublishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/r44l4fa4kdha"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <!-- Section 1 -->
                <LinearLayout
                    android:id="@+id/section1"
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:background="#174791"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:id="@+id/rexa84552ao4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginBottom="31dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/cancelBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingHorizontal="26dp"
                            android:text="Cancelar"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/publishBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/publish_button"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingHorizontal="22dp">

                            <Button
                                android:id="@+id/PublishAct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00FFFFFF"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical"
                                android:paddingHorizontal="22dp"
                                android:text="Publicar"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Section 2 -->
                <LinearLayout
                    android:id="@+id/section2"
                    android:layout_width="match_parent"
                    android:layout_height="672dp"
                    android:background="@drawable/big_section"
                    android:orientation="vertical"
                    android:paddingVertical="22dp">

                    <LinearLayout
                        android:id="@+id/newPublish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/newPublishTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nova publicação"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sections"
                        android:orientation="vertical"
                        android:paddingVertical="19dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="162dp">

                        <LinearLayout
                            android:layout_width="379dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="38dp"
                                android:text="Nome"
                                android:textColor="#297E33"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/name"
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:background="@null"
                                android:hint="Digite seu nome"
                                android:maxLength="30"
                                android:textColor="#555555"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/cb_anon"
                            android:layout_width="200dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="10dp"
                            android:text="Permanecer anônimo"
                            android:textColor="#000000"
                            android:visibility="visible" />

                    </LinearLayout>

                    <!-- Input Título -->
                    <LinearLayout
                        android:id="@+id/rej03lbw7kr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sections"
                        android:orientation="horizontal"
                        android:paddingVertical="19dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="162dp">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Título"
                            android:layout_marginEnd="38dp"
                            android:textColor="#297E33"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/publishTitle"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:background="@null"
                            android:hint="Digite o título aqui..."
                            android:maxLength="30"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Input Tema -->
                    <LinearLayout
                        android:id="@+id/rioexqd14j9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sections"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="17dp">

                        <TextView
                            android:id="@+id/theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="45dp"
                            android:text="Tema"
                            android:textColor="#297E33"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/selectionT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/textField"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textCount"
                            android:layout_width="62dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="6dp"
                            android:text="0/250"
                            android:textColor="#555555"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edtTextField"
                            android:layout_width="match_parent"
                            android:layout_height="199dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="Escreva sua reclamação aqui..."
                            android:maxLength="250"
                            android:textColor="#555555" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>