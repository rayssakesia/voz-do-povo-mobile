<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <!-- Barra superior azul -->
                <LinearLayout
                    android:id="@+id/layout_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#174791"
                    android:orientation="vertical">

                    <!-- Localização atual e sugestões -->

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="200dp"
                        android:layout_height="63dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="26dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo_b" />



                    <LinearLayout
                        android:id="@+id/card_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_nav"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingTop="40dp"
                        android:paddingBottom="17dp"
                        android:layout_alignParentBottom="true">

                        <!-- Localização -->
                        <LinearLayout
                            android:id="@+id/layout_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="22dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/pin_location"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="5dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/localizacao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Você está em Parangaba"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Botão Nova Sugestão/Reclamação -->
                        <LinearLayout
                            android:id="@+id/layout_sugestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:layout_marginBottom="24dp"
                            android:background="@drawable/round_corner_green"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="15dp">

                            <TextView
                                android:id="@+id/text_sugestion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fazer uma nova sugestão/reclamação"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/round_corner_searchbar"
                                android:scaleType="fitXY"
                                android:src="@drawable/plus" />
                        </LinearLayout>

                        <!-- Imagens lado a lado -->
                        <LinearLayout
                            android:id="@+id/first_lane"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginBottom="21dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cardview_service"
                                android:layout_width="157dp"
                                android:layout_height="205dp"
                                android:background="@drawable/round_corner_green"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />

                            <LinearLayout
                                android:id="@+id/riica18m5br"
                                android:layout_width="49dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" />

                            <ImageView
                                android:id="@+id/cardview_av"
                                android:layout_width="157dp"
                                android:layout_height="205dp"
                                android:background="@drawable/round_corner_green"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>

                        <!-- Segunda linha de imagens -->
                        <LinearLayout
                            android:id="@+id/second_lane"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginBottom="21dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cardview_publish"
                                android:layout_width="157dp"
                                android:layout_height="205dp"
                                android:background="@drawable/round_corner_green"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />

                            <LinearLayout
                                android:id="@+id/rn6b4vejwmhq"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" />

                            <ImageView
                                android:id="@+id/cardview_questions"
                                android:layout_width="157dp"
                                android:layout_height="205dp"
                                android:background="@drawable/round_corner_green"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_search"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="34dp"
                        android:background="@drawable/round_corner_searchbar"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:layout_alignParentTop="true"
                        android:elevation="4dp"
                        android:layout_marginTop="-640dp">

                        <ImageView
                            android:id="@+id/lupa"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="9dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <EditText
                            android:id="@+id/search_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Buscar por bairro..."
                            android:inputType="text"
                            android:paddingVertical="7dp"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
    </LinearLayout>
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>